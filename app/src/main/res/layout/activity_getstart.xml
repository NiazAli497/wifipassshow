<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/new_blue">

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/welcome_to_our_wifi_nanalyzer_app"
        android:layout_marginTop="@dimen/_40sdp"
        android:fontFamily="@font/ibm_font"
        android:textSize="@dimen/_16ssp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/_15sdp"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_h1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.18"
        />

    <ImageView
        android:id="@+id/image_get_start"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/guide_h1"
        android:src="@drawable/get_start"
        app:layout_constraintBottom_toTopOf="@+id/guide_h2"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_h2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.70"
        />

    <TextView
        android:id="@+id/text_get_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/welcome_descrip"
        android:layout_marginTop="@dimen/_20sdp"
        android:fontFamily="@font/ibm_font"
        android:textSize="@dimen/_16ssp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/guide_h2"
        android:layout_marginStart="@dimen/_15sdp"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        app:layout_constraintBottom_toTopOf="@+id/text_start"
        android:layout_marginBottom="@dimen/_15sdp"
        />

    <TextView
        android:id="@+id/text_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/get_start"
        android:fontFamily="@font/ibm_font"
        android:textSize="@dimen/_16ssp"
        android:textColor="@color/new_blue"
        android:paddingTop="@dimen/_8sdp"
        android:paddingBottom="@dimen/_8sdp"
        android:paddingStart="@dimen/_30sdp"
        android:paddingEnd="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_20sdp"
        app:layout_constraintTop_toBottomOf="@id/text_get_start"
        android:background="@drawable/shape_get_start"
        app:layout_constraintBottom_toTopOf="@+id/guide_h3"
        android:elevation="@dimen/_10sdp"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_h3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95"
        />





</androidx.constraintlayout.widget.ConstraintLayout>