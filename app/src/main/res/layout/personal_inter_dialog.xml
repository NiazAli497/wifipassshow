<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_color_new">
    <ImageView
        android:id="@+id/personal_inter_header_img"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/_12sdp"
        android:background="@drawable/dashboard_bg"
        android:elevation="2dp"/>
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/personal_inter_close_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/personal_inter_close_button"
        app:layout_constraintStart_toStartOf="@id/personal_inter_close_button"
        app:layout_constraintTop_toTopOf="@id/personal_inter_close_button"
        app:layout_constraintBottom_toBottomOf="@id/personal_inter_close_button"
        app:indicatorSize="@dimen/_35sdp"
        app:indicatorTrackGapSize="0dp"
        app:trackColor="@color/bg_color_new"
        app:trackCornerRadius="@dimen/_6sdp"
        app:trackThickness="@dimen/_2sdp"
        android:max="300"
        android:elevation="2dp"/>
    <ImageView
        android:id="@+id/personal_inter_close_button"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        app:layout_constraintEnd_toEndOf="@id/personal_inter_header_img"
        app:layout_constraintTop_toTopOf="@id/personal_inter_header_img"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:padding="@dimen/_8sdp"
        android:scaleType="fitCenter"
        android:src="@drawable/cross_icon_black"
        android:elevation="2dp"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/personal_inter_header_img"
        app:layout_constraintStart_toStartOf="@id/personal_inter_header_img"
        app:layout_constraintTop_toBottomOf="@id/personal_inter_close_progress"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:elevation="2dp"
        android:gravity="center">
        <TextView
            android:id="@+id/personal_inter_ad_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="@dimen/_18ssp"
            android:textColor="@color/black"
            android:fontFamily="@font/ibm_font"
            android:textStyle="bold"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:ellipsize="marquee"/>
        <TextView
            android:id="@+id/personal_inter_ad_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/black"
            android:fontFamily="@font/ibm_font"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:layout_marginTop="@dimen/_6sdp"/>
        <ImageView
            android:id="@+id/personal_inter_ad_img"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_120sdp"
            android:layout_marginTop="@dimen/_24sdp"
            android:scaleType="fitCenter"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/personal_inter_ad_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/install_button_bg"
            android:layout_marginTop="@dimen/_24sdp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:includeFontPadding="false"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:fontFamily="@font/ibm_font"
            android:text="Install"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>